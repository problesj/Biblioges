{% extends "base.twig" %}

{% block title %}{{ bibliografia.titulo }} - Biblioges{% endblock %}

{% block content %}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="mb-0">{{ bibliografia.titulo }}</h2>
        <div class="btn-group">
            <a href="{{ app_url }}bibliografias/{{ bibliografia.id }}/editar" class="btn btn-warning">
                Editar
            </a>
            <form action="{{ app_url }}bibliografias/{{ bibliografia.id }}" method="POST" class="d-inline">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn btn-danger" onclick="return confirm('¿Está seguro de eliminar esta bibliografía?')">
                    Eliminar
                </button>
            </form>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h4>Información General</h4>
                <table class="table">
                    <tr>
                        <th>Tipo:</th>
                        <td>{{ bibliografia.tipo }}</td>
                    </tr>
                    <tr>
                        <th>Asignatura:</th>
                        <td>{{ bibliografia.asignatura_nombre }}</td>
                    </tr>
                    <tr>
                        <th>Autores:</th>
                        <td>
                            {% for autor in bibliografia.autores %}
                            {{ autor.nombre }}{% if not loop.last %}, {% endif %}
                            {% endfor %}
                        </td>
                    </tr>
                    <tr>
                        <th>Año de Publicación:</th>
                        <td>{{ bibliografia.anio_publicacion }}</td>
                    </tr>
                    <tr>
                        <th>Editorial:</th>
                        <td>{{ bibliografia.editorial }}</td>
                    </tr>
                    <tr>
                        <th>ISBN:</th>
                        <td>{{ bibliografia.isbn }}</td>
                    </tr>
                    <tr>
                        <th>DOI:</th>
                        <td>{{ bibliografia.doi }}</td>
                    </tr>
                    <tr>
                        <th>URL:</th>
                        <td>
                            {% if bibliografia.url %}
                            <a href="{{ bibliografia.url }}" target="_blank">{{ bibliografia.url }}</a>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>Estado:</th>
                        <td>
                            <span class="badge {% if bibliografia.estado %}bg-success{% else %}bg-danger{% endif %}">
                                {{ bibliografia.estado ? 'Activo' : 'Inactivo' }}
                            </span>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="col-md-6">
                <h4>Disponibilidad</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Sede</th>
                                <th>Tipo</th>
                                <th>Ejemplares Físicos</th>
                                <th>Ejemplares Digitales</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for disponible in bibliografia.disponibles %}
                            <tr>
                                <td>{{ disponible.sede_nombre }}</td>
                                <td>{{ disponible.tipo }}</td>
                                <td>{{ disponible.ejemplares }}</td>
                                <td>{{ disponible.ejemplares_digitales }}</td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="4" class="text-center">No hay disponibilidad registrada</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <a href="{{ app_url }}bibliografias" class="btn btn-secondary">Volver</a>
    </div>
</div>
{% endblock %} 