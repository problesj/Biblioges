{% extends 'base.twig' %}

{% block content %}
    <!-- Modal de Progreso -->
    <div class="modal fade" id="modalProgreso" tabindex="-1" aria-labelledby="modalProgresoLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalProgresoLabel">Guardando Bibliografías</h5>
                </div>
                <div class="modal-body">
                    <div class="progress mb-3">
                        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <div id="mensajeProgreso" class="text-center">
                        Iniciando proceso...
                    </div>
                    <div id="detallesProgreso" class="mt-3 small text-muted">
                        <!-- Aquí se mostrarán los detalles del proceso -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Resultados de la búsqueda</h2>
        <button type="button" class="btn btn-primary" id="btnGuardarSeleccionados" onclick="guardarBibliografiasSeleccionadas()">
            <i class="fas fa-save"></i> Guardar Seleccionados
        </button>
    </div>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Código de inicialización
        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM cargado - Inicializando modal...');
            
            // Inicializar la modal
            const modalElement = document.getElementById('modalProgreso');
            if (!modalElement) {
                console.error('No se encontró el elemento modal');
                return;
            }
            
            window.modalProgreso = new bootstrap.Modal(modalElement);
            console.log('Modal inicializada');
            
            // Función para mostrar la modal de progreso
            window.mostrarModalProgreso = function() {
                console.log('Intentando mostrar modal...');
                if (window.modalProgreso) {
                    window.modalProgreso.show();
                    console.log('Modal mostrada');
                } else {
                    console.error('Modal no inicializada');
                }
            };
            
            // Función para actualizar el progreso
            window.actualizarProgreso = function(porcentaje, mensaje, detalles = '') {
                console.log('Actualizando progreso:', porcentaje, mensaje);
                const progressBar = document.querySelector('#modalProgreso .progress-bar');
                const mensajeProgreso = document.getElementById('mensajeProgreso');
                const detallesProgreso = document.getElementById('detallesProgreso');
                
                if (progressBar && mensajeProgreso && detallesProgreso) {
                    progressBar.style.width = `${porcentaje}%`;
                    progressBar.setAttribute('aria-valuenow', porcentaje);
                    mensajeProgreso.textContent = mensaje;
                    
                    if (detalles) {
                        detallesProgreso.innerHTML = detalles;
                    }
                } else {
                    console.error('No se encontraron elementos de la modal');
                }
            };
            
            // Función para ocultar la modal de progreso
            window.ocultarModalProgreso = function() {
                console.log('Intentando ocultar modal...');
                if (window.modalProgreso) {
                    window.modalProgreso.hide();
                    console.log('Modal ocultada');
                } else {
                    console.error('Modal no inicializada');
                }
            };
        });
    </script>
    <script src="/js/bibliografias-declaradas/buscar-catalogo.js"></script>
{% endblock %} 