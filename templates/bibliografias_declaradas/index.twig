{% extends 'base.twig' %}

{% block title %}Bibliografías Declaradas{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Bibliografías Declaradas</h1>
        <a href="{{ app_url }}bibliografias-declaradas/create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nueva Bibliografía Declarada
        </a>
    </div>

    {% if error %}
        <div class="alert alert-danger">{{ error }}</div>
    {% endif %}

    <!-- Filtros -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="GET" action="{{ app_url }}bibliografias-declaradas" class="row g-3">
                <div class="col-md-3">
                    <label for="asignatura" class="form-label">Asignatura</label>
                    <select name="asignatura" id="asignatura" class="form-select">
                        <option value="">Todas</option>
                        {% for asignatura in asignaturas %}
                            <option value="{{ asignatura.id }}" {% if filtros.asignatura == asignatura.id %}selected{% endif %}>
                                {{ asignatura.nombre }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="tipo" class="form-label">Tipo</label>
                    <select name="tipo" id="tipo" class="form-select">
                        <option value="">Todos</option>
                        <option value="libro" {% if filtros.tipo == 'libro' %}selected{% endif %}>Libro</option>
                        <option value="articulo" {% if filtros.tipo == 'articulo' %}selected{% endif %}>Artículo</option>
                        <option value="tesis" {% if filtros.tipo == 'tesis' %}selected{% endif %}>Tesis</option>
                        <option value="software" {% if filtros.tipo == 'software' %}selected{% endif %}>Software</option>
                        <option value="sitio_web" {% if filtros.tipo == 'sitio_web' %}selected{% endif %}>Sitio Web</option>
                        <option value="generico" {% if filtros.tipo == 'generico' %}selected{% endif %}>Genérico</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="estado" class="form-label">Estado</label>
                    <select name="estado" id="estado" class="form-select">
                        <option value="">Todos</option>
                        <option value="A" {% if filtros.estado == 'A' %}selected{% endif %}>Activo</option>
                        <option value="I" {% if filtros.estado == 'I' %}selected{% endif %}>Inactivo</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="orden" class="form-label">Ordenar por</label>
                    <select name="orden" id="orden" class="form-select">
                        <option value="titulo" {% if filtros.orden == 'titulo' %}selected{% endif %}>Título</option>
                        <option value="tipo" {% if filtros.orden == 'tipo' %}selected{% endif %}>Tipo</option>
                        <option value="anio_publicacion" {% if filtros.orden == 'anio_publicacion' %}selected{% endif %}>Año</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="direccion" class="form-label">Dirección</label>
                    <select name="direccion" id="direccion" class="form-select">
                        <option value="asc" {% if filtros.direccion == 'asc' %}selected{% endif %}>Ascendente</option>
                        <option value="desc" {% if filtros.direccion == 'desc' %}selected{% endif %}>Descendente</option>
                    </select>
                </div>
                <div class="col-md-1 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-filter"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>

    {% if bibliografias|length > 0 %}
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Título</th>
                                <th>Tipo</th>
                                <th>Autores</th>
                                <th>Asignaturas</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for bibliografia in bibliografias %}
                                <tr>
                                    <td>{{ bibliografia.titulo }}</td>
                                    <td>{{ bibliografia.tipo }}</td>
                                    <td>
                                        {% for autor in bibliografia.autores %}
                                            {{ autor.nombres }} {{ autor.apellidos }}{% if not loop.last %}, {% endif %}
                                        {% endfor %}
                                    </td>
                                    <td>
                                        {% for asignatura in bibliografia.asignaturas %}
                                            <div class="mb-1">
                                                <strong>{{ asignatura.nombre }}</strong>
                                                <br>
                                                <small class="text-muted">
                                                    {% for departamento in asignatura.departamentos %}
                                                        {{ departamento.nombre }}
                                                        {% if not loop.last %}, {% endif %}
                                                    {% endfor %}
                                                </small>
                                            </div>
                                            {% if not loop.last %}<hr class="my-1">{% endif %}
                                        {% endfor %}
                                    </td>
                                    <td>
                                        {% if bibliografia.estado %}
                                            <span class="badge bg-success">Activo</span>
                                        {% else %}
                                            <span class="badge bg-danger">Inactivo</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ app_url }}bibliografias-declaradas/{{ bibliografia.id }}" 
                                               class="btn btn-sm btn-info" title="Ver">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ app_url }}bibliografias-declaradas/{{ bibliografia.id }}/edit" 
                                               class="btn btn-sm btn-warning" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form action="{{ app_url }}bibliografias-declaradas/{{ bibliografia.id }}" 
                                                  method="POST" class="d-inline" 
                                                  onsubmit="return confirm('¿Está seguro de eliminar esta bibliografía declarada?');">
                                                <input type="hidden" name="_METHOD" value="DELETE">
                                                <button type="submit" class="btn btn-sm btn-danger" title="Eliminar">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    {% else %}
        <div class="alert alert-info">
            No hay bibliografías declaradas registradas.
        </div>
    {% endif %}
</div>
{% endblock %} 