{% extends 'base.twig' %}

{% block title %}Bibliografías Declaradas{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Bibliografías Declaradas</h1>
        <a href="{{ url_for('bibliografias-declaradas.create') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nueva Bibliografía Declarada
        </a>
    </div>

    {% if error %}
        <div class="alert alert-danger">{{ error }}</div>
    {% endif %}

    {% if bibliografias|length > 0 %}
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Título</th>
                        <th>Tipo</th>
                        <th>Autores</th>
                        <th>Asignatura</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for bibliografia in bibliografias %}
                        <tr>
                            <td>{{ bibliografia.titulo }}</td>
                            <td>{{ bibliografia.tipo }}</td>
                            <td>
                                {% for autor in bibliografia.autores %}
                                    {{ autor.nombre }}{% if not loop.last %}, {% endif %}
                                {% endfor %}
                            </td>
                            <td>{{ bibliografia.asignatura.nombre }}</td>
                            <td>
                                {% if bibliografia.estado %}
                                    <span class="badge bg-success">Activo</span>
                                {% else %}
                                    <span class="badge bg-danger">Inactivo</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ url_for('bibliografias-declaradas.show', {id: bibliografia.id}) }}" 
                                       class="btn btn-sm btn-info" title="Ver">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ url_for('bibliografias-declaradas.edit', {id: bibliografia.id}) }}" 
                                       class="btn btn-sm btn-warning" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form action="{{ url_for('bibliografias-declaradas.destroy', {id: bibliografia.id}) }}" 
                                          method="POST" class="d-inline" 
                                          onsubmit="return confirm('¿Está seguro de eliminar esta bibliografía declarada?');">
                                        <input type="hidden" name="_METHOD" value="DELETE">
                                        <button type="submit" class="btn btn-sm btn-danger" title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-info">
            No hay bibliografías declaradas registradas.
        </div>
    {% endif %}
</div>
{% endblock %} 