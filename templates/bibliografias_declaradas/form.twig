{% extends 'base.twig' %}

{% block title %}
    {% if bibliografia.id %}
        Editar Bibliografía Declarada
    {% else %}
        Nueva Bibliografía Declarada
    {% endif %}
{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            {% if bibliografia.id %}
                Editar Bibliografía Declarada
            {% else %}
                Nueva Bibliografía Declarada
            {% endif %}
        </h1>
        <a href="{{ url_for('bibliografias-declaradas.index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver
        </a>
    </div>

    {% if error %}
        <div class="alert alert-danger">{{ error }}</div>
    {% endif %}

    <div class="card">
        <div class="card-body">
            <form method="POST" action="{% if bibliografia.id %}{{ url_for('bibliografias-declaradas.update', {id: bibliografia.id}) }}{% else %}{{ url_for('bibliografias-declaradas.store') }}{% endif %}">
                {% if bibliografia.id %}
                    <input type="hidden" name="_METHOD" value="PUT">
                {% endif %}

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="titulo" class="form-label">Título</label>
                            <input type="text" class="form-control" id="titulo" name="titulo" 
                                   value="{{ bibliografia.titulo }}" required>
                        </div>

                        <div class="mb-3">
                            <label for="tipo" class="form-label">Tipo</label>
                            <select class="form-select" id="tipo" name="tipo" required>
                                <option value="">Seleccione un tipo</option>
                                <option value="libro" {% if bibliografia.tipo == 'libro' %}selected{% endif %}>Libro</option>
                                <option value="articulo" {% if bibliografia.tipo == 'articulo' %}selected{% endif %}>Artículo</option>
                                <option value="software" {% if bibliografia.tipo == 'software' %}selected{% endif %}>Software</option>
                                <option value="sitio_web" {% if bibliografia.tipo == 'sitio_web' %}selected{% endif %}>Sitio Web</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="anio_publicacion" class="form-label">Año de Publicación</label>
                            <input type="number" class="form-control" id="anio_publicacion" name="anio_publicacion" 
                                   value="{{ bibliografia.anio_publicacion }}" min="1900" max="{{ 'now'|date('Y') }}" required>
                        </div>

                        <div class="mb-3">
                            <label for="editorial" class="form-label">Editorial</label>
                            <input type="text" class="form-control" id="editorial" name="editorial" 
                                   value="{{ bibliografia.editorial }}">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="isbn" class="form-label">ISBN</label>
                            <input type="text" class="form-control" id="isbn" name="isbn" 
                                   value="{{ bibliografia.isbn }}">
                        </div>

                        <div class="mb-3">
                            <label for="doi" class="form-label">DOI</label>
                            <input type="text" class="form-control" id="doi" name="doi" 
                                   value="{{ bibliografia.doi }}">
                        </div>

                        <div class="mb-3">
                            <label for="url" class="form-label">URL</label>
                            <input type="url" class="form-control" id="url" name="url" 
                                   value="{{ bibliografia.url }}">
                        </div>

                        <div class="mb-3">
                            <label for="asignatura_id" class="form-label">Asignatura</label>
                            <select class="form-select" id="asignatura_id" name="asignatura_id" required>
                                <option value="">Seleccione una asignatura</option>
                                {% for asignatura in asignaturas %}
                                    <option value="{{ asignatura.id }}" {% if bibliografia.asignatura_id == asignatura.id %}selected{% endif %}>
                                        {{ asignatura.nombre }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        {% if bibliografia.id %}
                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="estado" name="estado" 
                                           {% if bibliografia.estado %}checked{% endif %}>
                                    <label class="form-check-label" for="estado">
                                        Activo
                                    </label>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Autores</label>
                    <div class="row">
                        {% for autor in autores %}
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="autores[]" 
                                           value="{{ autor.id }}" id="autor_{{ autor.id }}"
                                           {% if bibliografia.id and bibliografia.autores.contains(autor) %}checked{% endif %}>
                                    <label class="form-check-label" for="autor_{{ autor.id }}">
                                        {{ autor.nombre }}
                                    </label>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-primary">
                        {% if bibliografia.id %}
                            <i class="fas fa-save"></i> Guardar Cambios
                        {% else %}
                            <i class="fas fa-plus"></i> Crear
                        {% endif %}
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %} 