{% extends 'base.twig' %}

{% block title %}Detalles de Bibliografía Declarada{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Detalles de Bibliografía Declarada</h1>
        <div>
            <a href="{{ app_url }}bibliografias-declaradas/{{ bibliografia.id }}/edit" class="btn btn-primary">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a href="{{ app_url }}bibliografias-declaradas" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <!-- Tipo de Bibliografía -->
                    <div class="mb-4">
                        <h3 class="text-primary">
                            {% if bibliografia.tipo == 'libro' %}
                                <i class="fas fa-book"></i>
                            {% elseif bibliografia.tipo == 'articulo' %}
                                <i class="fas fa-newspaper"></i>
                            {% elseif bibliografia.tipo == 'tesis' %}
                                <i class="fas fa-graduation-cap"></i>
                            {% elseif bibliografia.tipo == 'sitio_web' %}
                                <i class="fas fa-globe"></i>
                            {% elseif bibliografia.tipo == 'software' %}
                                <i class="fas fa-laptop-code"></i>
                            {% elseif bibliografia.tipo == 'generico' %}
                                <i class="fas fa-file-alt"></i>
                            {% endif %}
                            {{ bibliografia.tipo|title }}
                        </h3>
                    </div>

                    <!-- Título -->
                    <div class="mb-3">
                        <h4 class="text-muted">Título:</h4>
                        <h2>{{ bibliografia.titulo }}</h2>
                    </div>

                    <!-- Autores -->
                    <div class="mb-3">
                        <h4>Autor(es):</h4>
                        <ul class="list-unstyled">
                            {% for autor in bibliografia.autores %}
                                <li>{{ autor.apellidos }}, {{ autor.nombres }}</li>
                            {% endfor %}
                        </ul>
                    </div>

                    <!-- Información General -->
                    <div class="mb-3">
                        <p><strong>Año de Edición:</strong> {{ bibliografia.anio_publicacion }}</p>
                        <p><strong>Editorial:</strong> {{ bibliografia.editorial }}</p>
                        {% if bibliografia.edicion %}
                            <p><strong>Edición:</strong> {{ bibliografia.edicion }}</p>
                        {% endif %}
                        <p><strong>Formato:</strong> {{ bibliografia.formato|title }}</p>
                        {% if bibliografia.url %}
                            <div class="mb-3">
                                <p><strong>URL:</strong></p>
                                <div class="d-flex align-items-center">
                                    <div class="me-3 text-break" style="max-width: 70%;">
                                        <a href="{{ bibliografia.url }}" target="_blank" class="text-primary">
                                            {{ bibliografia.url }}
                                        </a>
                                    </div>
                                    <a href="{{ bibliografia.url }}" target="_blank" class="btn btn-sm btn-info">
                                        <i class="fas fa-external-link-alt"></i> Abrir enlace
                                    </a>
                                </div>
                            </div>
                        {% endif %}
                    </div>

                    <!-- Datos Específicos según Tipo -->
                    <div class="mb-3">
                        <h4>Datos Específicos:</h4>
                        {% if bibliografia.tipo == 'libro' %}
                            <p><strong>ISBN:</strong> {{ bibliografia.isbn }}</p>
                        {% elseif bibliografia.tipo == 'articulo' %}
                            <p><strong>Título de Revista:</strong> {{ bibliografia.titulo_revista }}</p>
                            <p><strong>ISSN:</strong> {{ bibliografia.issn }}</p>
                            <p><strong>Cronología:</strong> {{ bibliografia.cronologia }}</p>
                        {% elseif bibliografia.tipo == 'generico' %}
                            <p><strong>Descripción:</strong> {{ bibliografia.descripcion }}</p>
                        {% elseif bibliografia.tipo == 'tesis' %}
                            <p><strong>Carrera:</strong> {{ bibliografia.carrera_nombre }}</p>
                        {% elseif bibliografia.tipo == 'software' %}
                            <p><strong>Versión:</strong> {{ bibliografia.version }}</p>
                        {% elseif bibliografia.tipo == 'sitio_web' %}
                            <p><strong>Fecha de Consulta:</strong> {{ bibliografia.fecha_consulta|date('d/m/Y') }}</p>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        <p><strong>Tipo:</strong> 
                            {% if bibliografia.tipo == 'libro' %}
                                <i class="fas fa-book text-primary"></i> Libro
                            {% elseif bibliografia.tipo == 'articulo' %}
                                <i class="fas fa-newspaper text-info"></i> Artículo
                            {% elseif bibliografia.tipo == 'tesis' %}
                                <i class="fas fa-graduation-cap text-success"></i> Tesis
                            {% elseif bibliografia.tipo == 'sitio_web' %}
                                <i class="fas fa-globe text-warning"></i> Sitio Web
                            {% elseif bibliografia.tipo == 'software' %}
                                <i class="fas fa-laptop-code text-danger"></i> Software
                            {% elseif bibliografia.tipo == 'generico' %}
                                <i class="fas fa-file-alt text-secondary"></i> Genérico
                            {% endif %}
                        </p>
                    </div>

                    {% if bibliografia.nota %}
                        <div class="mb-3">
                            <h4>Nota:</h4>
                            <p>{{ bibliografia.nota }}</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Tabla de Asignaturas Vinculadas -->
<div class="card mt-4">
    <div class="card-header">
        <h3 class="card-title mb-0">Asignaturas Vinculadas</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Código(s) Asignatura</th>
                        <th>Nombre de la Asignatura</th>
                        <th>Tipo de Bibliografía</th>
                    </tr>
                </thead>
                <tbody>
                    {% for asignatura in asignaturas_vinculadas %}
                    <tr>
                        <td>
                            <div style="font-size: 0.9em;">
                                {% if asignatura.codigos %}
                                    {{ asignatura.codigos|trim|nl2br }}
                                {% else %}
                                    Sin código
                                {% endif %}
                            </div>
                        </td>
                        <td>{{ asignatura.nombre }}</td>
                        <td>{{ asignatura.tipo_bibliografia }}</td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="3" class="text-center">No hay asignaturas vinculadas</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %} 