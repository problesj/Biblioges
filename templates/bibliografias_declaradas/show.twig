{% extends 'base.twig' %}

{% block title %}Detalles de Bibliografía Declarada{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Detalles de Bibliografía Declarada</h1>
        <div>
            <a href="{{ url_for('bibliografias-declaradas.edit', {id: bibliografia.id}) }}" class="btn btn-warning">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a href="{{ url_for('bibliografias-declaradas.index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Información General</h5>
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Título:</strong> {{ bibliografia.titulo }}</p>
                    <p><strong>Tipo:</strong> {{ bibliografia.tipo }}</p>
                    <p><strong>Asignatura:</strong> {{ bibliografia.asignatura.nombre }}</p>
                    <p><strong>Autores:</strong></p>
                    <ul>
                        {% for autor in bibliografia.autores %}
                            <li>{{ autor.nombre }}</li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="col-md-6">
                    <p><strong>Año de Publicación:</strong> {{ bibliografia.anio_publicacion }}</p>
                    <p><strong>Editorial:</strong> {{ bibliografia.editorial }}</p>
                    <p><strong>ISBN:</strong> {{ bibliografia.isbn }}</p>
                    <p><strong>DOI:</strong> {{ bibliografia.doi }}</p>
                    <p><strong>URL:</strong>
                        {% if bibliografia.url %}
                            <a href="{{ bibliografia.url }}" target="_blank">
                                {{ bibliografia.url }}
                            </a>
                        {% else %}
                            N/A
                        {% endif %}
                    </p>
                    <p><strong>Estado:</strong>
                        {% if bibliografia.estado %}
                            <span class="badge bg-success">Activo</span>
                        {% else %}
                            <span class="badge bg-danger">Inactivo</span>
                        {% endif %}
                    </p>
                </div>
            </div>

            <h5 class="mt-4">Información de la Asignatura</h5>
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Departamento:</strong> {{ bibliografia.asignatura.departamento.nombre }}</p>
                    <p><strong>Facultad:</strong> {{ bibliografia.asignatura.departamento.facultad.nombre }}</p>
                    <p><strong>Sede:</strong> {{ bibliografia.asignatura.departamento.facultad.sede.nombre }}</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Tipo:</strong> {{ bibliografia.asignatura.tipo }}</p>
                    <p><strong>Vigencia:</strong> {{ bibliografia.asignatura.vigencia_desde }} - {{ bibliografia.asignatura.vigencia_hasta }}</p>
                    <p><strong>Periodicidad:</strong> {{ bibliografia.asignatura.periodicidad }}</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 