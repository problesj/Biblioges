{% extends 'base.twig' %}

{% block title %}
    {% if bibliografia.id %}
        Editar Bibliografía Disponible
    {% else %}
        Nueva Bibliografía Disponible
    {% endif %}
{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            {% if bibliografia.id %}
                Editar Bibliografía Disponible
            {% else %}
                Nueva Bibliografía Disponible
            {% endif %}
        </h1>
        <a href="{{ url_for('bibliografias-disponibles.index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver
        </a>
    </div>

    {% if error %}
        <div class="alert alert-danger">{{ error }}</div>
    {% endif %}

    <div class="card">
        <div class="card-body">
            <form method="POST" action="{% if bibliografia.id %}{{ url_for('bibliografias-disponibles.update', {id: bibliografia.id}) }}{% else %}{{ url_for('bibliografias-disponibles.store') }}{% endif %}">
                {% if bibliografia.id %}
                    <input type="hidden" name="_METHOD" value="PUT">
                {% endif %}

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="bibliografia_declarada_id" class="form-label">Bibliografía Declarada</label>
                            <select class="form-select" id="bibliografia_declarada_id" name="bibliografia_declarada_id" required>
                                <option value="">Seleccione una bibliografía</option>
                                {% for biblio in bibliografias %}
                                    <option value="{{ biblio.id }}" {% if bibliografia.bibliografia_declarada_id == biblio.id %}selected{% endif %}>
                                        {{ biblio.titulo }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="tipo_disponibilidad" class="form-label">Tipo de Disponibilidad</label>
                            <select class="form-select" id="tipo_disponibilidad" name="tipo_disponibilidad" required>
                                <option value="">Seleccione un tipo</option>
                                <option value="fisico" {% if bibliografia.tipo_disponibilidad == 'fisico' %}selected{% endif %}>Físico</option>
                                <option value="digital" {% if bibliografia.tipo_disponibilidad == 'digital' %}selected{% endif %}>Digital</option>
                                <option value="mixto" {% if bibliografia.tipo_disponibilidad == 'mixto' %}selected{% endif %}>Mixto</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="sede_id" class="form-label">Sede</label>
                            <select class="form-select" id="sede_id" name="sede_id">
                                <option value="">Seleccione una sede</option>
                                {% for sede in sedes %}
                                    <option value="{{ sede.id }}" {% if bibliografia.sede_id == sede.id %}selected{% endif %}>
                                        {{ sede.nombre }}
                                    </option>
                                {% endfor %}
                            </select>
                            <div class="form-text">Obligatorio para bibliografías físicas o mixtas</div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3" id="ejemplares-container">
                            <label for="ejemplares" class="form-label">Ejemplares Físicos</label>
                            <input type="number" class="form-control" id="ejemplares" name="ejemplares" 
                                   min="0" value="{{ bibliografia.ejemplares }}">
                            <div class="form-text">Obligatorio para bibliografías físicas o mixtas</div>
                        </div>

                        <div class="mb-3" id="ejemplares-digitales-container">
                            <label for="ejemplares_digitales" class="form-label">Ejemplares Digitales</label>
                            <input type="number" class="form-control" id="ejemplares_digitales" name="ejemplares_digitales" 
                                   min="0" value="{{ bibliografia.ejemplares_digitales }}">
                            <div class="form-text">Obligatorio para bibliografías digitales o mixtas</div>
                        </div>

                        {% if bibliografia.id %}
                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="estado" name="estado" 
                                           {% if bibliografia.estado %}checked{% endif %}>
                                    <label class="form-check-label" for="estado">
                                        Activo
                                    </label>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-primary">
                        {% if bibliografia.id %}
                            <i class="fas fa-save"></i> Guardar Cambios
                        {% else %}
                            <i class="fas fa-plus"></i> Crear
                        {% endif %}
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const tipoDisponibilidad = document.getElementById('tipo_disponibilidad');
    const sedeContainer = document.getElementById('sede_id');
    const ejemplaresContainer = document.getElementById('ejemplares-container');
    const ejemplaresDigitalesContainer = document.getElementById('ejemplares-digitales-container');

    function actualizarCampos() {
        const tipo = tipoDisponibilidad.value;
        
        // Actualizar visibilidad de campos según el tipo
        if (tipo === 'fisico') {
            sedeContainer.required = true;
            ejemplaresContainer.style.display = 'block';
            ejemplaresDigitalesContainer.style.display = 'none';
        } else if (tipo === 'digital') {
            sedeContainer.required = false;
            ejemplaresContainer.style.display = 'none';
            ejemplaresDigitalesContainer.style.display = 'block';
        } else if (tipo === 'mixto') {
            sedeContainer.required = true;
            ejemplaresContainer.style.display = 'block';
            ejemplaresDigitalesContainer.style.display = 'block';
        } else {
            sedeContainer.required = false;
            ejemplaresContainer.style.display = 'none';
            ejemplaresDigitalesContainer.style.display = 'none';
        }
    }

    // Actualizar campos al cargar la página
    actualizarCampos();

    // Actualizar campos cuando cambia el tipo de disponibilidad
    tipoDisponibilidad.addEventListener('change', actualizarCampos);
});
</script>
{% endblock %} 