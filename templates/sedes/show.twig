{% extends "base.twig" %}

{% block title %}
    {{ sede.nombre }} - Biblioges
{% endblock %}

{% block content %}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="card-title mb-0">Detalles de la Sede</h2>
        <div>
            <a href="{{ app_url }}sedes/{{ sede.id }}/editar" class="btn btn-primary me-2">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a href="{{ app_url }}sedes" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h4>Informaci贸n General</h4>
                <table class="table">
                    <tr>
                        <th>C贸digo:</th>
                        <td>{{ sede.codigo }}</td>
                    </tr>
                    <tr>
                        <th>Nombre:</th>
                        <td>{{ sede.nombre }}</td>
                    </tr>
                    <tr>
                        <th>Direcci贸n:</th>
                        <td>{{ sede.direccion }}</td>
                    </tr>
                    <tr>
                        <th>Estado:</th>
                        <td>
                            {% if sede.estado %}
                                <span class="badge bg-success">Activo</span>
                            {% else %}
                                <span class="badge bg-danger">Inactivo</span>
                            {% endif %}
                        </td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="mt-4">
            <h4>Facultades</h4>
            {% if sede.facultades|length > 0 %}
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>C贸digo</th>
                            <th>Nombre</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for facultad in sede.facultades %}
                        <tr>
                            <td>{{ facultad.codigo }}</td>
                            <td>{{ facultad.nombre }}</td>
                            <td>
                                {% if facultad.estado %}
                                    <span class="badge bg-success">Activo</span>
                                {% else %}
                                    <span class="badge bg-danger">Inactivo</span>
                                {% endif %}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            <div class="alert alert-info">
                No hay facultades registradas en esta sede.
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %} 