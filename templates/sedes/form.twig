{% extends "base.twig" %}

{% block title %}
    {% if sede.id %}
        Editar Sede - Biblioges
    {% else %}
        Nueva Sede - Biblioges
    {% endif %}
{% endblock %}

{% block content %}
<div class="card">
    <div class="card-body">
        <h2 class="card-title mb-4">
            {% if sede.id %}
                Editar Sede
            {% else %}
                Nueva Sede
            {% endif %}
        </h2>

        <form method="POST" action="{{ app_url }}sedes{% if sede.id %}/{{ sede.id }}{% endif %}">
            {% if sede.id %}
            <input type="hidden" name="_method" value="PUT">
            {% endif %}

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="codigo">Código de Sede *</label>
                        <input type="text" class="form-control" id="codigo" name="codigo" value="{{ sede.codigo|default('') }}" required>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="nombre">Nombre de Sede *</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" value="{{ sede.nombre|default('') }}" required>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="direccion">Dirección</label>
                        <textarea class="form-control" id="direccion" name="direccion" rows="3" required>{{ sede.direccion }}</textarea>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="estado">Estado</label>
                        <select class="form-control" id="estado" name="estado">
                            <option value="1" {{ sede.estado|default(1) == 1 ? 'selected' : '' }}>Activo</option>
                            <option value="0" {{ sede.estado|default(1) == 0 ? 'selected' : '' }}>Inactivo</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a href="{{ app_url }}sedes" class="btn btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-primary">
                    {% if sede.id %}
                        <i class="fas fa-save"></i> Actualizar
                    {% else %}
                        <i class="fas fa-plus"></i> Crear
                    {% endif %}
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %} 